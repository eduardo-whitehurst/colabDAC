<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  
    <!-- Definição do Servlet -->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servelets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet -->
    <servlet>
        <servlet-name>cadastroUsuarioServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servelets.CadastroUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cadastroUsuarioServlet</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet -->
    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servelets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet -->
    <servlet>
        <servlet-name>atualizarUsuarioServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servelets.AtualizarUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>atualizarUsuarioServlet</servlet-name>
        <url-pattern>/atualizar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>controlador</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controlador</servlet-name>
        <url-pattern>/mvc</url-pattern>
    </servlet-mapping>

</web-app>