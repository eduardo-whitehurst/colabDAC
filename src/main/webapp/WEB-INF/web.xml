<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  
    <!-- Definição do Servlet Login-->
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet Funcionario-->
    <servlet>
        <servlet-name>FuncionarioServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.FuncionarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FuncionarioServlet</servlet-name>
        <url-pattern>/funcionarios</url-pattern>
    </servlet-mapping>
    <!-- Definição do Servlet Cliente-->
    <servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.ClienteServerlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClienteServlet</servlet-name>
        <url-pattern>/clientes</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet Cadastro-->
    <servlet>
        <servlet-name>cadastroUsuarioServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.CadastroUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cadastroUsuarioServlet</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet home-->
    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet Veiculo-->
    <servlet>
        <servlet-name>VeiculoServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.VeiculoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VeiculoServlet</servlet-name>
        <url-pattern>/veiculos</url-pattern>
    </servlet-mapping>

    <!-- Definição do Servlet atualizar-->
    <servlet>
        <servlet-name>atualizarUsuarioServlet</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.AtualizarUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>atualizarUsuarioServlet</servlet-name>
        <url-pattern>/atualizar</url-pattern>
    </servlet-mapping>
    <!-- Definição do Servlet Controlador-->
    <servlet>
        <servlet-name>controlador</servlet-name>
        <servlet-class>br.com.colabdac.colabdac.servlets.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controlador</servlet-name>
        <url-pattern>/mvc</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>pages/login.jsp</welcome-file>
    </welcome-file-list>

</web-app>